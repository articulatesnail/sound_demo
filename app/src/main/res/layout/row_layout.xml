<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_tem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height_two"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/row_order_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:padding="@dimen/padding_four"
        android:text="@string/test_string"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_two" />

    <TextView
        android:id="@+id/row_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:padding="@dimen/padding_four"
        android:text="@string/test_string"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_two" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".1"
        android:background="transparent"
        android:src="@drawable/ic_action_play"
        android:scaleType="centerInside"  />

</LinearLayout>
